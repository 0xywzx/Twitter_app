<%= form_with(model: @tweet, local: true, url: tweets_path) do |form| %>
  <div class="container">
    <div id="wrapper" class="new_tweet">
      <div class="new_tweet_header">
        <h2>ツイートする</h2>
        <h2><%= link_to "✖", tweets_path %></h2>
      </div>

      <div class="new_tweet_boby">
          <div class="tweet_name">
            <%= form.label :名前 %>
            <%= form.text_field :name %>
          </div>
          <div class="tweet_content">
            <%= form.text_field :content %>
          </div>
          <%= form.submit "ツイート" %>
        </div>
      </div>
    </div>
<% end %>
